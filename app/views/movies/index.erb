<h1>Favorite movies for <%= current_user.username %></h1>
<br>
<br>
<% if !@drama.empty? %>
<div style="width: 200px;display: inline-block;">
<h1>DRAMA</h1>
    <% @drama.each do | movie | %>
        <li>Title:  <%= movie.title %> <br>
        <br>
        <a href="/movies/<%= movie.id %>/edit">Edit</a>
        &nbsp;&nbsp;
        <form action="/movies/<%= movie.id %>" method="post" style="display: inline-block;">
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <button type="submit" name="delete" value="delete" class="btn-link">Delete</button>
        </form>
        <br>
        <br>
    <% end %>
</div>
<% end %>
